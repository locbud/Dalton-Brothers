<h1>Listing what_love_to_dos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Number of items</th>
      <th>User estimated time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @what_love_to_dos.each do |what_love_to_do| %>
      <tr>
        <td><%= what_love_to_do.title %></td>
        <td><%= what_love_to_do.description %></td>
        <td><%= what_love_to_do.deadline %></td>
        <td><%= what_love_to_do.number_of_items %></td>
        <td><%= what_love_to_do.user_estimated_time %></td>
        <td><%= link_to 'Show', what_love_to_do %></td>
        <td><%= link_to 'Edit', edit_what_love_to_do_path(what_love_to_do) %></td>
        <td><%= link_to 'Destroy', what_love_to_do, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a new item', new_what_love_to_do_path, class: "button radius" %>
